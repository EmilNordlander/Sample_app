<% if logged_in? %>
<div class="center jumbotron"> <h1>Välkommen tillbaka! </h1>

<h2>
<% if current_user.admin? %>
Du är administrator
 <%end%>

</h2>
<br>
<%= link_to "Gå till din profil", current_user, class: "btn btn-lg btn-primary" %> 
</div>

<div class="row">
<aside class="col-md-4">

<section class="user_info">
<%= render 'shared/user_info' %>
</section>

<section class="stats">
<%= render 'shared/stats' %>
</section>

<section class="micropost_form">
<%=render 'shared/micropost_form' %>
</section>
</aside>

<div class = "col-md-8">
    <h3> Inlägg </h3>
    <%= render 'shared/feed' %>
</div>
</div>

<% else %>
<div class="center jumbotron"> <h1>Välkommen! </h1>

<h2>
Skapa ett konto för att kunna följa dina vänner och posta inlägg!
</h2>

<br>

<%= link_to "Skapa ett konto", signup_path, class: "btn btn-lg btn-primary" %> 
</div>
<br><br><br>



<%end%>
<div class="center">
<%= link_to image_tag("tält.jpg", alt: "Tält", width: "800") %>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>